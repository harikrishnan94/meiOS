    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "custom",
            "name": "QEMU",
            "targetCreateCommands": [
                "target create ${input:cargotarget}"
            ],
            "processCreateCommands": [
                "gdb-remote localhost:1234"
            ],
            "preLaunchTask": "Run Mei Kernel",
        }
    ],
    "inputs": [
        {
            "id": "cargotarget",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "cargo run -- -DUMMY 2>&1 | grep -e '-DUMMY' | head -n 1 | awk '{print $(NF-1)}'",
                "description": "Get Target Name"
            }
        }
    ]
}