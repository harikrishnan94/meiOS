{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust: cargo build",
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
        },
        {
            "label": "Run Mei Kernel",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--",
                "-S",
                "-s"
            ],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true,
            },
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Running"
                }
            }
        },
        {
            "label": "Run Mei Tests",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--",
                "-S",
                "-s"
            ],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true,
            },
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Running"
                }
            }
        }
    ]
}